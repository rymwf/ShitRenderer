	"version": "0.2.0",
	"configurations": [
		{
			"name": "(Windows) Launch GL Debug",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/Debug/${fileBasenameNoExtension}d.exe",
			"args": [
				"GL"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "internalConsole"
		},
		{
			"name": "(Windows) Launch GL Release",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/Release/${fileBasenameNoExtension}.exe",
			"args": [
				"GL"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "internalConsole"
		},
		{
			"name": "(Windows) Launch VK Debug",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/Debug/${fileBasenameNoExtension}d.exe",
			"args": [
				"VK"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "internalConsole"
		},
		{
			"name": "(Windows) Launch VK Release",
			"type": "cppvsdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/bin/Release/${fileBasenameNoExtension}.exe",
			"args": [
				"VK"
			],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}",
			"environment": [],
			"console": "internalConsole"
		}
	]
}