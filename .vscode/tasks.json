{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "config ninja",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-B",
				"build",
				"-G",
				"Ninja Multi-Config",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
		},
		{
			"type": "shell",
			"label": "C/C++: build example msvc debug, active file",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Debug",
				"--target",
				"${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
		},
		{
			"type": "shell",
			"label": "C/C++: build example msvc Release, active file",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Release",
				"--target",
				"${fileBasenameNoExtension}",
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": "build",
		},
		{
			"type": "shell",
			"label": "C/C++: build all Debug",
			"command": "cmake",
			"args": [
				"--build",
				"build",
				"--config",
				"Debug",
